
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="~/Content/style.css">
    <!--bootstrap 4.6-->
    <link rel="stylesheet" href="~/Dependencies/bootstrap-4.6.0-dist/css/bootstrap.min.css">
    <!--bootstrap icons-->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css">
</head>
<body>
    <section class="container-fluid d-flex full-height no-bootstrap-padding justify-content-center align-items-center background-tertiary">

        <div class="container mx-auto d-flex justify-content-between align-items-start">
            <div class="logo-container mb-3 mr-5 full-width">
                <a id="logo" href="#"><h1 class="pl-3">Oriontek.do</h1></a>
                <h3 class="pl-3 mb-4"><b><span><i class="bi bi-geo-alt accent"></i></span> Client Address Management System</b></h3>
                <h3 class="pl-3">By Josue Perez</h3>
            </div>

            <div class="form-wrapper d-flex full-width">
                <form>
                    <h2 class="mt-2 pr-2"><b><span><i class="bi bi-person accent pr-2"></i></span>User Login</b></h2>
                    <div class="form-group">
                        <label for="userEmail">Email address</label>
                        <input type="email" class="form-control" id="userEmail" aria-describedby="emailHelp" placeholder="Enter email">
                    </div>
                    <div class="form-group">
                        <label for="userPass">Password</label>
                        <input type="password" class="form-control" id="userPass" placeholder="Password">
                    </div>
                    <button type="submit" class="btn btn-success full-width" id="signIn">Sign In</button>
                </form>
            </div>
        </div>

    </section>


    <!--JQuery-->
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <!--Bootstrap-->
    <script src="~/Dependencies/bootstrap-4.6.0-dist/js/bootstrap.min.js"></script>
    <!--JS files-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <script src="~/Scripts/js/login/signin.js"></script>
</body>
</html>
