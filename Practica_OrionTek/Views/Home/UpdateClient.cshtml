
@{
    ViewBag.Title = "UpdateClient";
    var info = ViewBag.clientInfo;
}

<section class="d-flex flex-col justify-content-center responsive-x-padding mt-5 mb-5">
    <a href="/Home/UserDetails/@info.id"><h3><i class="bi bi-arrow-left"></i> Go back</h3></a>
    <div class="d-flex justify-content-between align-items-center">
        <h2 class="mt-2 pr-2"><b><span><i class="bi bi-person-plus accent pr-2"></i></span>UpdateClient</b></h2>

        <button class="btn btn-success" type="button" id="saveChanges">Save Changes</button>
    </div>
</section>

<section class="d-flex flex-col justify-content-center responsive-x-padding mt-5 mb-2">
    <input type="number" id="clientID" value="@info.id" hidden />
    <div class="d-flex justify-content-between mb-3">
        <div class="col-lg-4 flex-col pr-2 no-bootstrap-padding">
            <h3>First Name</h3>
            <input class="full-width" type="text" value="@info.nombre" id="firstName" />
        </div>

        <div class="col-lg-4 flex-col pr-2 no-bootstrap-padding">
            <h3>Last Name</h3>
            <input class="full-width" type="text" value="@info.apellido" id="lastName" />
        </div>

        <div class="col-lg-4 flex-col pr-2 no-bootstrap-padding">
            <h3>Phone</h3>
            <input class="full-width" type="number" value="@info.telefono" id="phone" />
        </div>
    </div>

</section>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/js/client/updateClient.js"></script>