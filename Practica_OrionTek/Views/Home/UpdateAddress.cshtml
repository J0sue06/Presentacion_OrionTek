

@{
    var id = ViewBag.clientId;
    var direction = ViewBag.direction;
    var r = 0;
}

<section class="d-flex flex-col justify-content-center responsive-x-padding mt-5 mb-5">
    <a href="/Home/UserDetails/@id"><h3><i class="bi bi-arrow-left"></i> Go back</h3></a>
    <div class="d-flex justify-content-start align-items-center">
        <h2 class="mt-2 pr-2"><b><span><i class="bi bi-geo-alt accent"></i></span>Update Address</b></h2>
    </div>
</section>
<input type="number" value="@id" id="clientID" hidden />
<input type="number" value="@direction.id" id="addressID" hidden />
<section class="d-flex flex-col justify-content-center responsive-x-padding mt-5 mb-2" id="section_address">
    <div class="d-flex justify-content-between mb-3">
        <div class="col-lg-4 flex-col pr-2 no-bootstrap-padding">
            <h3>Address Line 1</h3>
            <input class="full-width" value="@direction.line1" type="text" id="line1" />
        </div>

        <div class="col-lg-4 flex-col pr-2 no-bootstrap-padding">
            <h3>Address Line 2</h3>
            <input class="full-width" type="text" value="@direction.line2" id="line2" />
        </div>

        <div class="col-lg-4 flex-col pr-2 no-bootstrap-padding">
            <h3>County</h3>
            <input class="full-width" type="text" value="@direction.sector" id="county" />
        </div>
    </div>

    <div class="d-flex justify-content-start">
        <div class="col-lg-4 flex-col pr-2 no-bootstrap-padding">
            <h3>City</h3>
            <input class="full-width" type="text" value="@direction.ciudad" id="city" />
        </div>

        <div class="col-lg-4 flex-col pr-2 no-bootstrap-padding">
            <h3>Country</h3>
            <select class="full-width" id="countrys">
                <option selected disabled value="@direction.id_pais">@direction.pais</option>
            </select>
        </div>

        <div class="col-lg-4 flex-col pr-2 no-bootstrap-padding">
            <h3>Zipcode</h3>
            <input class="full-width" type="number" value="@direction.zipcode" id="zipCode" />
        </div>

    </div>
</section>

<section class="d-flex flex-col justify-content-center responsive-x-padding mt-5 mb-2">
    <div class="d-flex justify-content-end">
        <div class="col-lg-4 d-flex justify-content-end no-bootstrap-padding">
            <button type="button" class="btn btn-success" id="update_Address">Update Address</button>
        </div>
    </div>
</section>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/js/client/UpdateAddress.js"></script>
